{
  "workspaces": [
    "client",
    "server",
    "desktop"
  ],
  "packageManager": "yarn@3.1.0",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@release-it/bumper": "^3.0.1",
    "@release-it/conventional-changelog": "^4.1.0",
    "commitlint": "^15.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.0",
    "release-it": "^14.12.1",
    "turbo": "^1.0.25"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "yarn workspace server install && yarn workspace server build && yarn workspace server migrate",
    "start": "yarn workspace server install && yarn workspace server start",
    "cm": "cz",
    "precommit": ""
  },
  "version": "0.4.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "turbo": {
    "baseBranch": "origin/staging",
    "pipeline": {
      "lint": {},
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "desktop#build": {
        "dependsOn": [
          "client#build"
        ]
      }
    }
  }
}
