{
  "workspaces": [
    "client",
    "server",
    "desktop"
  ],
  "packageManager": "yarn@3.1.0",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "commitlint": "^15.0.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^7.0.0",
    "standard-version": "^9.3.2"
  },
  "scripts": {
    "prepare": "husky install",
    "release": "standard-version",
    "build": "yarn workspace server install && yarn workspace server build",
    "start": "yarn workspace server start",
    "cm": "cz",
    "lint": "yarn workspaces foreach run lint",
    "format": "yarn workspaces foreach run format"
  },
  "version": "0.4.1",
  "standard-version": {
    "packageFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ],
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "client/package.json",
        "type": "json"
      },
      {
        "filename": "server/package.json",
        "type": "json"
      },
      {
        "filename": "desktop/src-tauri/tauri.conf.json",
        "updater": "tauri-updater.js"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
